page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  width: 100%;
  background: #fff;
}

.list-container scroll-view {
  height: 100%;
}

.list-container .list-box {
  display: flex;
  width: 100%;
  height: 90px;
  box-sizing: border-box;
  padding: 5px 10px;
  margin-top: 10px;
  border-bottom: 1px solid #ddd;
}

.list-container .list-box .avatar-img {
  height: 100%;
  width: 54px;
}

.list-container .list-box .text-box {
  box-sizing: border-box;
  width: calc(100% - 54px);
  flex: 1;
  padding: 5px 10px;
  position: relative;
}

.list-container .list-box .text-box .title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 16px;
  color: #333;
}

.list-container .list-box .text-box .subtitle {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  margin-top: 5px;
  color: #666;
}

.list-container .list-box .text-box .rating {
  font-size: 12px;
  position: absolute;
  right: 0;
  top: 0;
  color: #478afb;
  border-radius: 50%;
  height: 20px;
  width: 50px;
  line-height: 20px;
  font-weight: bold;
}

.list-container .list-box .text-box .rating.hot {
  color: #ff5722;
}

.list-container .load-over {
  font-size: 12px;
  color: #666;
  text-align: center;
  padding: 10px 0;
}
