page {
  -webkit-overflow-scrolling: touch;
}

#bg {
  position: fixed;
  z-index: 1;
  height: 75%;
  width: 100%;
  background-image: linear-gradient(0deg, #2196f3 0%, #478afb 100%);
  overflow: hidden;
  left: 0;
  top: 0;
}

#bg .white-block {
  background: #fff;
  height: 200px;
  width: 600px;
  position: absolute;
  bottom: -58px;
  left: 0;
  transform: rotate(-27deg);
}

.index-container {
  position: relative;
  overflow: auto;
  padding: 10px 0 30px;
  z-index: 1;
}

.index-container .recommend-title {
  font-size: 16px;
  color: #fff;
  width: 93.6%;
  margin: 0 auto 20px;
  padding-left: 10px;
  position: relative;
  line-height: 16px;
  box-sizing: border-box;
  font-weight: bold;
}

.index-container .recommend-title::after {
  height: 16px;
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 2px;
  background: #fff;
}

.index-container .head-wrap {
  height: 198px;
  width: 100%;
}

.index-container .head-wrap .head-list-box {
  height: 95%;
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: hidden;
  padding: 5px;
  border-radius: 8px;
}

.index-container .head-wrap .head-list-box .left {
  width: 50%;
  height: 100%;
  overflow: hidden;
  float: left;
}

.index-container .head-wrap .head-list-box .right {
  background: #fff;
  padding: 5px;
  box-sizing: border-box;
  width: 50%;
  height: 100%;
  overflow: hidden;
  border-radius: 3px;
  float: left;
}

.index-container .head-wrap .head-list-box .big-title {
  margin-bottom: 20px;
  width: 96%;
}

.index-container .head-wrap .head-list-box .big-title .name {
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  display: block;
  width: 100%;
}

.index-container .head-wrap .head-list-box .big-title .original-name {
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  display: block;
  width: 100%;
}

.index-container .head-wrap .head-list-box .title {
  font-size: 16px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  margin-bottom: 10px;
  width: 96%;
}

.index-container .head-wrap .head-list-box .avatar-img {
  width: 100%;
  height: 100%;
}

.index-container .head-wrap .head-list-box .title text {
  margin-left: 9px;
  letter-spacing: 0.9px;
}

.index-container .head-wrap .head-list-box .title view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.index-container .swiper-dots-wrap {
  text-align: center;
  width: 100%;
  height: 20px;
  line-height: 10px;
}

.index-container .swiper-dots-wrap .dot-box {
  height: 4px;
  width: 20px;
  opacity: 0.4;
  background: #fff;
  border-radius: 4px;
  display: inline-block;
  margin: 0 3px;
  transition: all 0.6s;
}

.index-container .swiper-dots-wrap .dot-box.on {
  opacity: 1;
  width: 40px;
}

.index-container .select-wrap {
  width: 90%;
  margin: 10px auto 0;
  padding-bottom: 20.25px;
}

.index-container .select-wrap .select-box {
  width: 47%;
  background: #fff;
  box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.21);
  border-radius: 4px;
  height: 160px;
  position: relative;
  float: left;
}

.index-container .select-wrap .select-box:nth-of-type(2n) {
  margin-left: 6%;
}

.index-container .select-wrap .select-box:first-of-type,
.index-container .select-wrap .select-box:nth-of-type(2) {
  margin-top: 0 !important;
}

.index-container .select-wrap .select-box image {
  width: 44px;
  margin: 14px;
}

.index-container .select-wrap .select-box .content-text {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 14px;
  font-size: 16px;
  box-sizing: border-box;
  padding: 0 14px;
}

.index-container .select-wrap .select-box .content-text text {
  font-size: 12px;
  color: #969aa1;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
